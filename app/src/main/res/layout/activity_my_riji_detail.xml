<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bulu"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.map.wulimap.Activity.MyRijiDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            >

            <com.andexert.library.RippleView
                android:id="@+id/fanhui"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                app:rv_centered="true"
                app:rv_framerate="60"
                app:rv_alpha="200">

                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_left_fanhui" />
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/shanchu"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:rv_centered="true"
                app:rv_framerate="60"
                app:rv_alpha="200">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_delate" />
            </com.andexert.library.RippleView>


            <LinearLayout
                android:background="@drawable/yuanjiao_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_margin="1dp"
                    android:background="@drawable/yuanjiao_bule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@drawable/yuanjiao_white"
                        android:layout_margin="1dp"
                        android:layout_width="150dp"
                        android:layout_height="36dp"
                        android:id="@+id/bt3"
                        android:text="日记详情"
                        android:textColor="@color/bulu"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_my_riji_detail" />


</android.support.design.widget.CoordinatorLayout>
