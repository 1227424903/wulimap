<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bulu"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"

    tools:context="com.map.wulimap.Activity.ChangePasswprdActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:background="@color/bulu"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <com.andexert.library.RippleView
                android:id="@+id/fanhui"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                app:rv_centered="true"
                app:rv_framerate="60"
                app:rv_alpha="200">

                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_left_fanhui" />
            </com.andexert.library.RippleView>


            <LinearLayout
                android:background="@drawable/yuanjiao_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_margin="1dp"
                    android:background="@drawable/yuanjiao_bule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@drawable/yuanjiao_white"
                        android:layout_margin="1dp"
                        android:layout_width="150dp"
                        android:layout_height="36dp"

                        android:id="@+id/bt3"
                        android:text="修改密码"
                        android:textColor="@color/bulu"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:background="@color/gray1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/shoujihao"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="手机号"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            android:layout_width="320dp"
            android:layout_height="45dp"

            android:phoneNumber="true" />

        <EditText
            android:id="@+id/jiumima"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:hint="原始密码"
            android:layout_marginBottom="2dp"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:password="true" />

        <EditText
            android:id="@+id/xinmima"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:hint="设置密码"
            android:layout_marginBottom="2dp"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:password="true" />

        <EditText
            android:id="@+id/zaicishuru"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:hint="确认密码"
            android:layout_marginBottom="10dp"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:password="true" />


        <Button
            android:id="@+id/xiugaimima"
            android:background="@drawable/button_change"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="4dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="24sp"
            android:textColor="@color/white"

            />

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            android:textColor="@color/bulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="可以修改密码的哦" />
    </LinearLayout>

</LinearLayout>
