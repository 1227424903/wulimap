<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/bulu"
    tools:context="com.map.wulimap.Activity.MapActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:background="@color/bulu">

            <com.andexert.library.RippleView
                android:id="@+id/fanhui"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                app:rv_centered="true"
                app:rv_framerate="60"
                app:rv_alpha="200">

                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_top_left" />
            </com.andexert.library.RippleView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/yuanjiao_white"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_margin="1dp"
                        android:background="@drawable/yuanjiao_bule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_margin="1dp"
                            android:layout_width="46dp"
                            android:layout_height="36dp"
                            android:background="@drawable/yuanjiao_bule"
                            android:id="@+id/bt2"
                            android:text="卫星"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <Button
                            android:layout_margin="1dp"
                            android:layout_width="46dp"
                            android:layout_height="36dp"
                            android:id="@+id/bt1"
                            android:text="平面"
                            android:background="@drawable/yuanjiao_white"
                            android:textColor="@color/bulu"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/yuanjiao_white"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_margin="1dp"
                        android:background="@drawable/yuanjiao_bule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_margin="1dp"
                            android:layout_width="46dp"
                            android:layout_height="36dp"
                            android:background="@drawable/yuanjiao_bule"
                            android:id="@+id/bt3"
                            android:text="跟随"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <Button
                            android:layout_margin="1dp"
                            android:layout_width="46dp"
                            android:layout_height="36dp"
                            android:background="@drawable/yuanjiao_white"
                            android:id="@+id/bt4"
                            android:text="定位"
                            android:textColor="@color/bulu"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.andexert.library.RippleView
                android:id="@+id/sousutu"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:rv_centered="true"
                app:rv_framerate="60"
                app:rv_alpha="200">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/top_right_button_serach"
                    android:layout_gravity="center_vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </com.andexert.library.RippleView>


        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_map" />


</android.support.design.widget.CoordinatorLayout>
