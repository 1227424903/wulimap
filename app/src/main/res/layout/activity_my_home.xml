<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bulu"
    android:fitsSystemWindows="true"
    tools:context="com.map.wulimap.Activity.MyHomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:background="@color/bulu"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <com.andexert.library.RippleView
                android:id="@+id/fanhui"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                app:rv_centered="true"
                app:rv_framerate="60"
                app:rv_alpha="200">

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="33dp"
                    android:background="@drawable/yuanjiao_white"
                    android:layout_height="33dp">

                    <ImageButton
                        android:layout_margin="2dp"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:background="@drawable/app_icon" />
                </LinearLayout>
            </com.andexert.library.RippleView>

            <com.andexert.library.RippleView
                android:id="@+id/sousu"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                app:rv_centered="true"
                app:rv_framerate="60"
                app:rv_alpha="200">

                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_add_friend"
                    android:layout_width="38dp"
                    android:layout_height="38dp" />
            </com.andexert.library.RippleView>


            <LinearLayout
                android:background="@drawable/yuanjiao_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_margin="1dp"
                    android:background="@drawable/yuanjiao_bule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@drawable/yuanjiao_white"
                        android:layout_margin="1dp"
                        android:layout_width="150dp"
                        android:layout_height="36dp"
                        android:id="@+id/bt3"
                        android:text="我的主页"
                        android:textColor="@color/bulu"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_my_home" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/yiceng"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_fab_change"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                app:rippleColor="@color/white"
                app:backgroundTint="@color/colorPrimary"
                app:borderWidth="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tianjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <RelativeLayout
                android:id="@+id/fab11"
                android:layout_marginLeft="75dp"
                android:layout_width="75dp"
                android:layout_height="75dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab1"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_fab_riji"
                    android:layout_margin="5dp"
                    app:rippleColor="@color/white"
                    app:backgroundTint="@color/colorPrimary"
                    app:borderWidth="0dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/fab11"
                android:layout_width="75dp"
                android:layout_height="75dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/botton_fab_youji"
                    android:layout_margin="5dp"
                    android:layout_centerInParent="true"
                    app:rippleColor="@color/white"
                    app:backgroundTint="@color/colorPrimary"
                    app:borderWidth="0dp" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
