<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bulu"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fragmentcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"></FrameLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:background="@color/white"
                android:id="@+id/tuijian"
                style="@style/main_tab_but_linear">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_tuijian_1" />

                <TextView
                    android:textColor="@color/white2"
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="推荐" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:id="@+id/youji"
                style="@style/main_tab_but_linear">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_youji_1" />

                <TextView
                    android:textColor="@color/white2"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="游记" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ditu"
                android:layout_height="fill_parent"
                android:background="@drawable/buton_yingying"
                style="@style/main_tab_but_linear">

                <ImageView
                    android:paddingTop="2dp"
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/app_icon" />


            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:id="@+id/rriji"
                style="@style/main_tab_but_linear"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_riji_1" />

                <TextView
                    android:textColor="@color/white2"
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日记" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"
                android:id="@+id/Zzhuye"
                style="@style/main_tab_but_linear"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_home_1" />

                <TextView
                    android:textColor="@color/white2"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="主页" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>