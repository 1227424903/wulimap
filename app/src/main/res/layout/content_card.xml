<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_card"
    tools:context="com.map.wulimap.Activity.CardActivity">


    <LinearLayout

        android:id="@+id/bo"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/shoucang"
            android:background="@drawable/buton_yingying"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/target"
                android:layout_gravity="center_horizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/skin_aio_panel_emotion_press" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="@color/bulu"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:background="@color/gray"
            android:layout_height="match_parent"></LinearLayout>


        <LinearLayout
            android:id="@+id/kaku"
            android:background="@drawable/buton_yingying"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/skin_aio_panel_image_press" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡库"
                android:textColor="@color/bulu"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <com.andtinder.view.CardContainer
        android:layout_above="@id/bo"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</RelativeLayout>
