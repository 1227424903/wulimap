<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/gray">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="35dp"
                android:layout_height="48dp"
                android:background="@drawable/app_icon"
                android:layout_marginBottom="2dp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nicheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="肖幕"
                    android:textSize="20sp" />

                <TextView
                    android:textSize="16sp"
                    android:id="@+id/shijian"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015.7.23" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/waiguanzhu"
                android:layout_gravity="center_vertical"
                android:background="@drawable/yuanjiao_white"
                android:layout_width="70dp"
                android:layout_marginRight="5dp"
                android:layout_height="30dp">

                <Button
                    android:id="@+id/guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yuanjiao_bule"
                    android:layout_margin="2dp"
                    android:text="未关注"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <ImageView

            android:layout_marginLeft="5dp"
            android:background="@color/white"
            android:id="@+id/tupian"
            android:scaleType="fitXY"
            android:src="@drawable/icon_image_defalt"
            android:layout_gravity="start"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:ellipsize="end"
            android:lines="1"
            android:id="@+id/neirong"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="几天了肯定就是福建省加快"
            android:textSize="17sp" />

        <TextView
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:background="@color/white"
            android:id="@+id/didian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textSize="18sp"
            android:ellipsize="end"
            android:lines="1" />

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:id="@+id/zanshu"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/button_zan"
                android:text="24"
                android:textSize="18sp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <TextView
                android:textColor="@color/gray"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="|"
                android:textSize="20sp"
                android:gravity="center_vertical" />

            <LinearLayout
                android:layout_weight="1"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="end"
                    android:id="@+id/pinglunshu"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/button_comment"
                    android:text="24"
                    android:textSize="18sp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="5dp"></LinearLayout>

    </LinearLayout>

</LinearLayout>
