<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:background="@color/bulu"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.map.wulimap.Activity.RegisterActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:background="@color/bulu"
            android:fitsSystemWindows="true"
            android:clipToPadding="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <com.andexert.library.RippleView
                android:id="@+id/fanhui"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                app:rv_centered="true"
                app:rv_framerate="60"
                app:rv_alpha="200">
                <ImageButton
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_left_fanhui" />
            </com.andexert.library.RippleView>
            <LinearLayout
                android:background="@drawable/yuanjiao_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_margin="1dp"
                    android:background="@drawable/yuanjiao_bule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@drawable/yuanjiao_white"
                        android:layout_margin="1dp"
                        android:layout_width="150dp"
                        android:layout_height="36dp"
                        android:id="@+id/bt3"
                        android:text="注册"
                        android:textColor="@color/bulu"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:background="@color/gray1"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
        android:background="@color/gray1"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/shoujihao"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="手机号"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:phoneNumber="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_width="320dp"
                android:layout_height="45dp">

                <EditText
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/yanzhengma"
                    android:background="@drawable/yuanjiao_white"
                    android:hint="验证码"
                    android:layout_marginRight="20dp"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/huoqu"
                    android:background="@drawable/button_change_able"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="获取"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:enabled="false" />
            </LinearLayout>

        <EditText
            android:id="@+id/nicheng"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="昵称"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            android:layout_width="320dp"
            android:layout_height="45dp"

            />

            <EditText
                android:id="@+id/anquanyouxiang"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
                android:hint="邮箱"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            android:layout_width="320dp"
                android:layout_height="45dp"

                />

            <EditText
                android:id="@+id/mima"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
                android:hint="设置密码"
            android:textSize="20sp"
            android:layout_marginBottom="2dp"
            android:layout_width="320dp"
                android:layout_height="45dp"
                android:password="true" />

        <EditText
            android:id="@+id/querenmima"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="确认密码"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:password="true" />



        <Button
            android:id="@+id/zhuce"
            android:background="@drawable/button_change"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="24sp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            android:textColor="@color/bulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="安全邮箱可用于找回密码，请妥善填写" />


    </LinearLayout>

    </ScrollView>
</LinearLayout>
