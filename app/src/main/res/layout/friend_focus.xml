<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/gray"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout

        android:background="@color/bulu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_my_home"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/nicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肖幕"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ta很懒！" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@drawable/yuanjiao_white"
            android:layout_width="50dp"
            android:layout_marginRight="5dp"
            android:layout_height="25dp">

            <Button
                android:id="@+id/gu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/yuanjiao_bule"
                android:layout_margin="1dp"
                android:text="已关注"
                android:textSize="12sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/bulu"
        android:layout_width="match_parent"
        android:layout_height="1dp">

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:background="@color/bulu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="12sp"
            android:text="点击查看详情"
            android:textColor="@color/white" />

        <ImageView
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/button_fanhui_go_right"
            android:layout_width="17dp"
            android:layout_height="17dp" />

    </LinearLayout>
</LinearLayout>
