<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bulu"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yuanjiao_white"
                android:layout_weight="5"
                android:id="@+id/sousubuju">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_search_blue"
                    android:background="@drawable/yuanjiao_white"
                    android:layout_gravity="center_vertical" />

                <AutoCompleteTextView
                    android:layout_marginLeft="5dp"
                    android:hint="想去哪？"
                    android:id="@+id/sousukuang"
                    android:layout_width="match_parent"
                    android:background="@drawable/yuanjiao_white"
                    android:layout_height="40dp"
                    android:dropDownAnchor="@id/sousubuju"

                    />
            </LinearLayout>

            <Button
                android:id="@+id/sousu"
                android:layout_width="70dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:background="@drawable/yuanjiao_bule"
                android:text="搜索"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:padding="3dp"

                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜素记录"
                android:textSize="16sp"

                android:background="@color/white"

                />

            <TextView
                android:id="@+id/shanchujilu"
                android:padding="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"

                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清空记录"
                android:textSize="16sp"
                android:background="@color/white"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ListView
                android:id="@+id/sousujieguo"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/white"></ListView>

            <ImageButton
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_audio"
                android:id="@+id/yuyin" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>