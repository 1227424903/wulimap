<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/bulu"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.map.wulimap.Activity.LoginActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <RelativeLayout
            android:fitsSystemWindows="true"
            android:clipToPadding="true"
            android:layout_width="fill_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bulu">

            <LinearLayout
                android:background="@drawable/yuanjiao_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_margin="1dp"
                    android:background="@drawable/yuanjiao_bule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@drawable/yuanjiao_white"
                        android:layout_margin="1dp"
                        android:layout_width="150dp"
                        android:layout_height="36dp"

                        android:id="@+id/bt3"
                        android:text="登录"
                        android:textColor="@color/bulu"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/gray">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <EditText
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="手机号"
            android:id="@+id/zhanghukuang"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:phoneNumber="true"
            android:layout_marginBottom="2dp"
            android:textSize="20sp" />

        <EditText
            android:textSize="20sp"
            android:hint="密码"
            android:id="@+id/mimakuang"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:background="@drawable/yuanjiao_white"
            android:layout_gravity="center_horizontal"
            android:password="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp" />


        <Button
            android:id="@+id/denglu"
            android:layout_margin="4dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_change" />

        <TextView
            android:layout_marginTop="6dp"
            android:textSize="15sp"
            android:textColor="@color/bulu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="登陆后享受自己的精彩" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="bottom"

            >

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/xinyonghu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新用户？"
                android:textColor="@color/bulu"
                android:layout_marginRight="25dp"
                android:textSize="16sp"
                android:layout_weight="1"

                />

            <TextView
                android:id="@+id/wangjimima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:textColor="@color/bulu"
                android:layout_marginRight="10dp"
                android:textSize="16sp"

                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
